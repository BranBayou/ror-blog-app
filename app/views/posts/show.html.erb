<article class='post-card-no-click'>
  <div class='post-card-title'>
  <h3><%=@post.title%> by <%=@post.author.name%></h3>
  <div class='post-card-count-top'>
  Comments: <%=@post.comments.count == nil ? 0 : @post.comments.count%>, 
  Likes: <%=@post.likes.count == nil ? 0 : @post.likes.count%></div>
  </div>
  <div><%=@post.text%></div>
  <%= button_to "Like", post_likes_path(@post), method: :post, class: ['common-btn', 'rigth-btn'] %>
</article>
<%= render 'shared/comment', comments: @post.comments%>
<%= render 'shared/comment_form', post: @post, comment: @comment%>